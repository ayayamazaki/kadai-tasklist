<% if logged_in? %>
  <h2>タスク一覧</h2>

<% if @tasks.any? %>
<table class="table table-striped">
  <thead>
  <tr>
    <th>id</th>
    <th>ステータス</th>
    <th>内容</th>
  </tr>
  </thead>
  <tbody>
    <% @tasks.reverse_each do |task| %>
      <tr>
        <td><%= link_to task.id,task %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to '新規タスクの作成',new_task_path,class:"btn btn-primary glyphicon glyphicon-plus" %>

<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Tasklist</h1>
    <%= link_to 'Sign up now!', signup_path, class: 'glyphicon glyphicon-heart btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>
